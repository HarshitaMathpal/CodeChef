import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc = new Scanner(System.in);
		int t=sc.nextInt();
		while(t-->0){
		    double q= sc.nextInt();
		    double p= sc.nextInt();
		    if(q>1000){
		        double exp = (p*q) - 0.10*(p*q);
		        System.out.println(exp);
		    }
		    else{
		        double exp = p*q;
		        System.out.println(exp);
		    }
		}
	}
}
