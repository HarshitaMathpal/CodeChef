class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc = new Scanner(System.in);
		int t=sc.nextInt();
		while(t-->0){
		    int n = sc.nextInt();
		    int x=sc.nextInt();
		    int[] arr = new int[n];
		    for(int i=0;i<n;i++){
		        arr[i]=sc.nextInt();
		    }
		    int sum =x,max=x;
		    for(int i=0;i<n;i++){
		        sum+=arr[i];
		        max=Math.max(sum,max);
		    }
		    System.out.println(max);
		}
	}
}
