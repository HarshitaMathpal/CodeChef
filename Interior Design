import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner scan = new Scanner(System.in);
		int test = scan.nextInt();
		while(test-->0){
		    int x1 = scan.nextInt();
		    int x2 = scan.nextInt();
		    int x3=scan.nextInt();
		    int x4 = scan.nextInt();
		    System.out.println(Math.min((x1+x2),(x3+x4)));
		}
	}
}
